<project default="jar:install"
         xmlns:j="jelly:core"
         xmlns:maven="jelly:maven">

    <preGoal name="java:compile">
        <attainGoal name="antlr:generate"/>
        <path id="antlr.generated.path" location="${basedir}/target/antlr"/>
        <maven:addPath id="maven.compile.src.set" refid="antlr.generated.path"/>
    </preGoal>

    <postGoal name="test:compile">
        <copy todir="${basedir}/target/test-classes">
            <fileset dir="${basedir}/src/test/java">
                <include name="**/*.jelly"/>
                <include name="**/*.vm"/>
            </fileset>
        </copy>
    </postGoal>
</project>