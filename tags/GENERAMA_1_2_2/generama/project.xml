    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <!-- Resources tat are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>${basedir}/src/main/java</directory>
                <includes>
                    <include>**/*.jelly</include>
                    <include>**/*.vm</include>
                </includes>
            </resource>
        </resources>

        <unitTestSourceDirectory>${basedir}/src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test/java</directory>
                    <includes>
                        <include>**/*.vm</include>
                        <include>**/*.jelly</include>
                        <include>**/*.ftl</include>
                        <include>**/*.dtd</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

    <reports>
